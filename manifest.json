{
  "manifest_version": 3,
  "name": "BetScraper - AI Screen Analysis",
  "version": "1.0",
  "description": "Captures your screen and finds relevant betting markets using AI",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Screen for Betting Opportunities"
  }
} 